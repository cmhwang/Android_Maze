<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#9ECCF6"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbarThumbHorizontal="@drawable/ghibli_dust"
    android:scrollbarThumbVertical="@drawable/ghibli_dust"
    tools:context=".gui.AMazeActivity">


    <TextView
        android:id="@+id/genText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#00018786"
        android:text="Generating the Totoro Maze"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textColorHighlight="@color/white"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/buildProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="365dp"
        android:layout_height="62dp"
        android:layout_below="@id/genText"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:indeterminateTint="#000000"
        android:progressTint="#000000"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarThumbHorizontal="@drawable/ghibli_dust"
        android:scrollbarThumbVertical="@drawable/ghibli_dust"
        android:scrollbarTrackHorizontal="@drawable/ghibli_dust" />

    <Spinner
        android:id="@+id/driverInput"
        android:layout_width="375dp"
        android:layout_height="64dp"
        android:layout_below="@id/buildProgress"
        android:layout_marginTop="1dp"
        android:spinnerMode="dropdown" />

    <LinearLayout
        android:id="@+id/driverLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/buildProgress">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver" />

    </LinearLayout>

    <Spinner
        android:id="@+id/robotConfigInput"
        android:layout_width="373dp"
        android:layout_height="75dp"
        android:layout_below="@id/driverLayout"
        android:layout_alignLeft="@id/driverLayout" />


</RelativeLayout>